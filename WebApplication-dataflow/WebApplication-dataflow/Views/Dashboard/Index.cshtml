
@{
    ViewBag.Title = "Index";
}
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<h1>@ViewBag.Title</h1>
<hr />
<div class="row">
    <div class="col-sm-8">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#collapse1">Unit position data</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                    <div class="panel-body">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading">Maintenance</div>
            <div class="panel-body">
                <div ng-app="dataflowApp" ng-controller="dashboardController">
                    <img ng-hide="maintenance" class="img-responsive" src="~/Content/Images/loading.gif" />
                    <ul class="list-group">
                        <li class="list-group-item" ng-repeat="unit in maintenance">
                            {{ "Unit " + unit.unitId + " has driven " + unit.kilometersTravelled + " km"}}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/dashboardController")

